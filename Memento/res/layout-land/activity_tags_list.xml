<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ContactsListActivity"
    android:baselineAligned="false" >

    <ListView
        android:id="@+id/listViewTags"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="5" >
    </ListView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="2" >

        <Button
            android:id="@+id/button_add_contact"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/socialaddperson"
            android:onClick="addToTagClicked"
            android:text="@string/taglist_activity_button_join_tag" />

        <Button
            android:id="@+id/button_send_contacts"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/newtag"
            android:onClick="addTagClicked"
            android:text="@string/taglist_activity_button_create_tag" />

    </LinearLayout>

</LinearLayout>